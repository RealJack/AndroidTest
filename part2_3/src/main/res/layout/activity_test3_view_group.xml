<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test3_ViewGroup"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_group1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="imstars main color"
            android:background="#ED193A"
            android:padding="20dp"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="yellow"
            android:background="#FFC300"
            android:padding="20dp"
            android:textSize="30dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="blue"
            android:background="#2980B9"
            android:padding="20dp"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="green"
            android:background="#2ECC71"
            android:padding="20dp"
            android:textSize="30dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btn_view_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GROUP1 BUTTON"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btn_view_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GROUP2 BUTTON"
            android:textSize="30dp"/>

        <Button
            android:id="@+id/btn_view_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GROUP RESET BUTTON"
            android:textSize="30dp"/>

    </LinearLayout>

</LinearLayout>